<div class="content">
    <h1>Recipe Tracker</h1>

    <h2>Recipes to cook!</h2>

    <p>
        {{#each recipes}}
        {{#unless tried}}
        {{> recipes/recipe-block tried=true}}
        {{/unless}}
        {{/each}}
    </p>

    <h2>Recipes that have been tried!</h2>

    <p>
        {{#each recipes}}
        {{#if tried}}
        {{> recipes/recipe-block tried=false}}
        {{/if}}
        {{/each}}
    </p>

    <h2>Add a Recipe</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Recipe Name:</label>
            <input type="text" id="ca" name="recipe_name">
        </div>

        <div class="form-group">
            <input type="radio" name="tried" value="1" checked> Add to tried recipes<br>
            <input type="radio" name="tried" value="0"> Add to recipes to cook
        </div>

        <button type="submit">Add Recipe</button>
    </form>
</div>