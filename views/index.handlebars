<div class="content">
    <h1>Recipes!</h1>

    <h2>Recipes that haven't been tried!</h2>

    <ul>
        {{#each recipes}}
        {{#unless tried}}
        {{> recipes/recipe-block tried=true}}
        {{/unless}}
        {{/each}}
    </ul>

    <h2>Recipes that have been tried!</h2>

    <ul>
        {{#each recipes}}
        {{#if tried}}
        {{> recipes/recipe-block tried=false}}
        {{/if}}
        {{/each}}
    </ul>

    <h2>Add a Recipe</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Recipe Name:</label>
            <input type="text" id="ca" name="recipe_name">
        </div>

        <div class="form-group">
            <label for="tried">Tried?</label><br>
            <input type="radio" name="tried" value="1" checked> Tried!<br>
            <input type="radio" name="tried" value="0"> Not Tried
        </div>

        <button type="submit">Add Recipe</button>
    </form>
</div>